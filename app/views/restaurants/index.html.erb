<div class="container mt-4">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4"> <!-- Chaque carte occupe 4 colonnes (3 par ligne) -->
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %>
            </h5>
            <p class="card-text"><strong>Category:</strong> <%= restaurant.category %></p>
            <p class="card-text"><strong>Address:</strong> <%= restaurant.address %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
