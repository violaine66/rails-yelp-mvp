<div class="restaurant">
  <div class="form-container">
    <div class="row justify-content-center">
      <div class="restaurant text-center mb-4">
        <h1><%= @restaurant.name%></h1>
        <h3><%= @restaurant.category%></h3>
        <h3><%= @restaurant.address%></h6>
      </div>

      <div class="reviews">
        <% @restaurant.reviews.each do |review| %>
          <div class="card">
            <div class="card-body">
              <p><strong>Rating:</strong> <%= review.rating %>/5</p>
              <p><%= review.content %></p>
            </div>
          </div>
          <% end %>
      </div>

      <h3 class='text-center my-4'>Add a Review</h3>
      <div class="add-review">
        <%= render 'reviews/form', restaurant: @restaurant, review: Review.new %>
      </div>

    </div>
  </div>
</div>
