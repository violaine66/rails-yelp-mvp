<div class="form">
  <div class="form-container">
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, as: :select, collection: 0..5, prompt: "Select a rating" %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>


</div>
